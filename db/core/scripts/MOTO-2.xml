<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">


    <changeSet id="MOTO-2-1" author="Alexander Kozlov">
        <createTable tableName="EVENT">
            <column name="ID" type="INTEGER">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="TITLE" type="VARCHAR2(255)">
                <constraints nullable="false" />
            </column>
            <column name="DESCRIPTION" type="VARCHAR2(4000)">
                <constraints nullable="false" />
            </column>
            <column name="START_DATE" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="DURATION" type="SMALLINT" />
            <column name="DURATION_UNIT" type="VARCHAR2(16)" />
            <column name="CREATED_DATE" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createSequence sequenceName="SQ_EVENT_ID" incrementBy="1" startValue="1" />
    </changeSet>

</databaseChangeLog>
